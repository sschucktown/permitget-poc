{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/dashboard", "dest": "/public/dashboard.html" },
    { "src": "/dashboard.html", "dest": "/public/dashboard.html" },
    { "src": "/dashboard.js", "dest": "/public/dashboard.js" },
    { "src": "/dashboard.css", "dest": "/public/dashboard.css" },

    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
