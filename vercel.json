{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/dashboard$", "dest": "/dashboard.html" },
    { "src": "^/dashboard\\.html$", "dest": "/dashboard.html" },

    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
