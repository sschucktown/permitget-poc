{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/dashboard", "dest": "/public/dashboard.html" },
    { "src": "/dashboard.html", "dest": "/public/dashboard.html" },

    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
